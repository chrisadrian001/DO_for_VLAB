						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"kind\": \"tm:util:bash:runstate\",\r\n  \"command\": \"run\",\r\n  \"utilCmdArgs\":\"-c 'touch /var/config/rest/iapps/enable'\"\r\n}"
